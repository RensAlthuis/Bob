    "version": "0.2.0",
    "configurations": [
        {
            "name":" (run) Launch",
        },
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/engine",
            "windows": {
                "program": "${workspaceFolder}/engine.exe",
                "miDebuggerPath": "C:\\MinGW\\bin\\gdb.exe"
            },
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}